#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!\n"
puts display_board(board)
puts "Please enter 1-9:"
input = gets.strip
input = input.to_i
index = input_to_index(input)
if index == valid_move?(board,index)
  move(board,index,player = "X")
else
  puts "Please enter 1-9:"
end
